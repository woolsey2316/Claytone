{
  "defaultSeverity": "error",
  "extends": ["tslint:recommended"],
  "rules": {
    "variable-name": {
      "options": [
        "ban-keywords",
        "check-format",
        "allow-leading-underscore",
        "allow-pascal-case"
      ]
    },
    "no-trailing-whitespace": [true, "always"],
    "prefer-const": [
      true,
      {
        "destructuring": "any"
      }
    ],
    "semicolon": [true, "always"],
    "quotemark": [true, "single"],
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": "never"
      }
    ],
    "object-literal-sort-keys": false,
    "no-console": false,
    "noImplicitAny": false,
    "noExplicitAny": false
  },
  "linterOptions": {
    "exclude": ["node_modules/**", "dist/**/*.ts"]
  },
  "rulesDirectory": []
}
